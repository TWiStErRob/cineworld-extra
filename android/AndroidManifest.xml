<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.twister.cineworld"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.CinemasActivity"
            android:label="@string/title_activity_cinemas"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.activity.FilmsActivity"
            android:label="@string/title_activity_films"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.activity.DatesActivity"
            android:label="@string/title_activity_dates"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.activity.PerformancesActivity"
            android:label="@string/title_activity_performances"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.activity.CategoriesActivity"
            android:label="@string/title_activity_categories"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.activity.EventsActivity"
            android:label="@string/title_activity_events"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.activity.DistributorsActivity"
            android:label="@string/title_activity_distributors"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>